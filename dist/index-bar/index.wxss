@import '../common/index.wxss';

.van-index-bar {
    position: relative
}

.van-index-bar__sidebar {
    position: fixed;
    top: 25%;
    right: 2%;
    display: -webkit-flex;
    display: flex;
    flex-direction: column;
    text-align: center;
}

.van-index-bar__index {
    font-weight: 500;
    padding: 0 4px 0 16px;
    padding: 0 var(--padding-base, 4px) 6rpx var(--padding-md, 16px);
    font-size: 10px;
    font-size: var(--index-bar-index-font-size, 10px);
    line-height: 14px;
    line-height: var(--index-bar-index-line-height, 14px)
}