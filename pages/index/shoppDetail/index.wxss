@import "../../../commpents/navbar.wxss";

page {
    width: 100%;
    overflow-x: hidden;
    padding-bottom: 120rpx;
}

.content {
    width: 100%;
    height: 100%;
    padding-bottom: 120rpx;
}

.swiperItem {
    width: 100%;
    height: 500rpx;
}

.swiperItem swiper {
    width: 100%;
    height: 100%;
}

.swiperItem image {
    width: 100%;
    height: 100%;
}

.shoppName {
    width: 100%;
    padding: 10rpx 20rpx 0 20rpx;
    box-sizing: border-box;
    font-size: 32rpx;
    display: -webkit-box;
    overflow: hidden;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}

.shoppMoney {
    width: 100%;
    padding: 20rpx;
    box-sizing: border-box;
    color: red;
    font-size: 24rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 5px solid #F3F3F3;
}

.picker-view {
    width: 100%;
    display: flex;
    background-color: #fff;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    bottom: 0rpx;
    left: 0rpx;
}

.picker-item {
    line-height: 70rpx;
    margin-left: 5rpx;
    margin-right: 5rpx;
    text-align: center;
}

.picker-view__pane {
    height: 100rpx;
    width: 100%;
    padding: 20rpx 32rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
}

.picker-view__pane text {
    color: #000;
    font-size: 30rpx;
}

.pick-view__group {
    width: 96%;
    height: 550rpx;
}

.shoppMoney text {
    font-size: 34rpx;
}

.shoppMoney .share {
    display: flex;
    align-items: center;
    color: #ADADAD;
}

.shoppMoney .share text {
    width: 80rpx;
    height: 40rpx;
    font-size: 20rpx;
    display: inline-block;
    text-align: center;
    line-height: 40rpx;
    border: 1px solid #ccc;
    border-radius: 20rpx;
}

.selectShopp {
    width: 100%;
    padding: 30rpx 40rpx 10rpx 20rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
    font-size: 26rpx;
}

.selectShopp .dian image {
    width: 30rpx;
    height: 8rpx;
}

van-popup {
    width: 100%;
}

van-popup .header {
    padding: 0 30rpx;
    width: 100%;
    box-sizing: border-box;
    height: 50rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.brief {
    width: 100%;
    padding: 25rpx 20rpx;
    box-sizing: border-box;
    border-bottom: 5px solid #F3F3F3;
}

.shareshopp {
    margin-top: 5rpx;
    margin-left: 330rpx;
}

.brief .brief-content {
    width: 100%;
    height: 100%;
    background-color: #F0F0F0;
    border-radius: 20rpx;
    padding: 30rpx 15rpx;
    box-sizing: border-box;
    display: flex;
    flex-wrap: wrap;
    align-items: center;

}

.brief .brief-content view {
    display: flex;
    align-items: center;
    margin-bottom: 5rpx;
    margin-right: 20rpx;
}

.brief image {
    width: 25rpx;
    height: 25rpx;
    margin-right: 10rpx;
}

.brief text {
    font-size: 24rpx;
}

/* 评论 */
.commentList {
    width: 100%;
    padding: 20rpx 20rpx 10rpx 20rpx;
    box-sizing: border-box;
    border-bottom: 10px solid #F3F3F3;
}

.commentList .item {
    width: 100%;
}

.commentList .item .essential {
    width: 100%;
    height: 100rpx;
    display: flex;
    align-items: center;
}

.commentList .item .essential .item_img image {
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
}

.commentList .item .essential .item_name .date {
    display: flex;
    align-items: center;
    font-size: 26rpx;
    justify-content: space-between;
}

.commentList .item .essential .item_name .rate {
    display: flex;
    align-items: center;
}

.commentList .item .essential .item_name .rate image {
    width: 20rpx;
    height: 20rpx;
}

.commentList .item .essential .item_name .rate text {
    margin-left: 20rpx;
    font-size: 24rpx;
}

.commentList .item .commentContent {
    width: 88%;
    margin-left: 85rpx;
    padding: 10rpx;
    box-sizing: border-box;
}

.commentList .item .commentContent .commentContent_Typeface {
    width: 100%;
    display: -webkit-box;
    overflow: hidden;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    font-size: 28rpx;
}

.commentList .item .commentContent .commentContent_img {
    width: 100%;
    height: 170rpx;
    padding: 10rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
}

.commentList .item .commentContent .commentContent_img image {
    width: 31%;
    height: 100%;
    margin-right: 25rpx;
    border-radius: 20rpx;
}

.commentList .item .commentContent .commentContent_img video {
    width: 31%;
    height: 100%;
    margin-right: 25rpx;
    border-radius: 20rpx;
}

.commentList .item .commentContent .shoppNumber {
    width: 100%;
    padding: 15rpx 0;
    box-sizing: border-box;
    font-size: 26rpx;
}

.evenMore {
    width: 100%;
    margin-top: 10rpx;
    height: 80rpx;
    border-bottom: 1px solid #EEEEEE;
}

.evenMore .evenMoreContent {
    width: 100%;
    padding: 0 20rpx;
    height: 100%;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 26rpx;
}

.commentList .evenMore button {
    width: 100%;
    background-color: #EF7E37;
    color: #FFFFFF;
}

/* 商品参数 */
.shopp_parameter {
    width: 100%;
    padding: 0 30rpx;
    box-sizing: border-box;
    padding-bottom: 120rpx;
}

.introduc-content {
    width: 100%;
}

.specification-content {
    width: 100%;
    margin-bottom: 50rpx;
}

.packaging-content {
    margin-bottom: 130rpx;
}

.introduc-content .header,
.specification-content .header,
.packaging-content .header {
    width: 100%;
    height: 70rpx;
    display: flex;
    align-items: center;
    font-size: 34rpx;
}

.introduc-content .header image,
.specification-content .header image,
.packaging-content .header image {
    width: 12rpx;
    height: 50%;
    margin-right: 20rpx;
}

.introduc-content .header-content {
    padding: 0 0 20rpx 0;
}

.introduc-img image {
    width: 100%;
    height: 700rpx;
    display: block;
}

.introduc-footer {
    width: 100%;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    font-size: 24rpx;
    color: #909090;
}

.specification-content .header-content {
    width: 99%;
    border: 1px solid #979797;
    border-bottom: none;
    display: flex;
    margin-top: 20rpx;
}

.specification-content .header-content .table-L {
    width: 30%;
    height: 100%;
    background-color: #F0F0F0;
}

.specification-content .header-content .table-L view {
    width: 100%;
    height: auto;
    border-bottom: 1px solid #979797;
    border-right: 1px solid #979797;
    padding: 20rpx 0;
    text-align: center;
    line-height: 100%;
    font-size: 26rpx;
}

.specification-content .header-content .table-R {
    width: 70%;
    height: 100%;
}

.specification-content .header-content .table-R view {
    width: 100%;
    height: auto;
    border-bottom: 1px solid #979797;
    padding: 20rpx 0;
    text-align: center;
    line-height: 100%;
    font-size: 26rpx;
}

.packaging-content .header-content {
    padding-left: 30rpx;
    margin-top: 10rpx;
    font-size: 26rpx;
}

.packaging-content .header-content .inventory {
    margin-bottom: 30rpx;
}


.footer {
    width: 100%;
    height: 110rpx;
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 9999;
    display: flex;
    background-color: #fff;
    padding: 10rpx;
    box-sizing: border-box;
    border-top: 1px solid #FFF8F6;
}

.content-shopp {
    width: 30%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.content-shopp .phoneImg {
    width: 40%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.content-shopp image {
    width: 40rpx;
    height: 50rpx;
}

.content-shopp .content-text {
    width: 60%;
    height: 100%;
    display: flex;
    flex-flow: column;
    justify-content: center;
    font-size: 22rpx;
    position: relative;
}

.content-shopp .content-text view:nth-child(2) {
    font-size: 20rpx;
}

.tellKF {
    position: absolute;
    top: 0;
    left: -80rpx;
    width: 150%;
    height: 100%;
    opacity: 0;
}

.content-button {
    width: 70%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.content-button button {
    width: 50% !important;
    height: 100%;
    padding: 0;
    color: #FFFFFF;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 26rpx;
    border-radius: 0 !important;
}

.content-button .pushShoppCar {
    background: linear-gradient(136deg, rgba(255, 200, 0, 1) 0%, rgba(247, 107, 28, 1) 100%);
}

.content-button .nowBuy {
    background: linear-gradient(180deg, rgba(245, 81, 95, 1) 0%, rgba(159, 4, 27, 1) 100%);
}

.shopp_parameter .filtrate-L {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.shopp_parameter .filtrate-L view {
    width: 33%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 26rpx;
}

.filtrate-L .nav_left_items.active {
    color: red;
}

.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 9000;
    color: #fff;
}

.modal-dialog {
    width: 540rpx;
    overflow: hidden;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 9999;
    background: #f9f9f9;
    margin: -180rpx 105rpx;
    border-radius: 36rpx;
}

.modal-title {
    padding-top: 50rpx;
    font-size: 36rpx;
    color: #030303;
    text-align: center;
    padding: 80rpx;
}

.modal-title image {
    width: 30rpx !important;
    height: 30rpx !important;
    margin-right: 20rpx;
}

.modal-footer {
    display: flex;
    flex-direction: row;
    height: 100rpx;
    border-top: 1px solid #EEEEEE;
    font-size: 34rpx;
    line-height: 100rpx;
}

.btn-cancel {
    width: 50%;
    color: #666;
    text-align: center;
    border-right: 1px solid #EEEEEE;
    font-size: 30rpx;
}

.btn-confirm {
    width: 50%;
    color: #000;
    font-size: 30rpx !important;
    text-align: center;
}

.scrollcontent {
    width: 100%;
    height: 300%;
}