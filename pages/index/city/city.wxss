@import "../../../commpents/navbar.wxss";
/* pages/city/city.wxss */
.cityBox {
    padding: 0 15rpx;
    display: flex;
    justify-content: row;
}

.search-city {
    width: 100%;
    height: 60rpx;
    position: absolute;
    top: 20rpx;
    display: flex;
    flex-direction: row;
}
.city-scroll {
    left: 0;
    position: fixed;
    height: 100%;
    width: 690rpx;
    padding: 0 40rpx 0 10rpx;
}

.search-nav {
    position: fixed;
    bottom: 50rpx;
    right: 5rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    padding: 0 20rpx;
}

.search-nav text {
    text-align: center;
    font-size: 24rpx;
}


.city {
    font-size: 24rpx;
    padding-bottom: 10rpx;
    border-bottom: 1rpx solid #fff;
    height: 30rpx;
    line-height: 30rpx;

}

.show-city {
    display: flex;
    flex-direction: column;
    justify-content: left;
}

.show-city text {
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    font-size: 28rpx;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}
.city-list .nav-text{
    display: flex;
    align-items: center;
    font-size: 34rpx;
    color: #000;
    background-color: #f6f6f6;
    height:70rpx;
}
.city-list{
    margin-bottom: 240px;
    padding-left: 20rpx;
    box-sizing: border-box;
}
.search{
    width: 100%;
    height: 90rpx;
    padding: 20rpx 20rpx 0 20rpx;
    box-sizing: border-box;
    position: relative;
}
.search input{
    width: 100%;
    height: 100%;
    background-color: #f6f6f6;
    padding-left: 70rpx;
    border-radius: 30rpx;
    box-sizing: border-box;
    font-size: 30rpx;
}
.search image{
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    top:40rpx;
    left:40rpx;
}
.nowCity{
    width: 100%;
    height: 70rpx;
    padding-left: 20rpx;
    display: flex;
    align-items: center;
    font-size: 24rpx;
}
.nowCity image{
    width: 25rpx;
    height: 22rpx;
    margin-right: 15rpx;
}
.hotCity{
    width: 90%;
    height: 100%;
    padding-left: 20rpx;
    line-height: 80rpx;
    box-sizing: border-box;
    margin-top: -20rpx;
}
.hotCity .hotCityList{
    display: flex;
    flex-wrap: wrap;
}
.hotCity .hotCityList text{
    margin-right: 2%;
    display: block;
    width: 22%;
    height: 50rpx;
    text-align: center;
    margin-bottom: 20rpx;
    line-height: 50rpx;
    border-radius: 10rpx;
    background-color:  #f6f6f6;
    font-size: 24rpx;
}