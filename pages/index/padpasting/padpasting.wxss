@import "../../../commpents/navbar.wxss";

page {
    padding-bottom: 150rpx;
}

.contentBox {
    width: 100%;
    background-color: #f6f6f6;
    overflow-x: hidden;
}

.contentBox .items {
    width: 100%;
    background-color: #fff;
    padding: 10rpx 20rpx 0 20rpx;
    box-sizing: border-box;


}

.shopName {
    width: 100%;
    height: 100rpx;
    border-bottom: 1px solid #ccc;
    display: flex;
    align-items: center;
}

.checkBox {
    width: 10%;
    text-align: center;
}

radio .wx-radio-input {
    width: 24rpx;
    height: 24rpx;
    border-radius: 50%;
}

/* 单选框选中后对勾样式 */
radio .wx-radio-input.wx-radio-input-checked::before {
    border-radius: 50%;
    width: 44rpx;
    height: 44rpx;
    line-height: 44rpx;
    text-align: center;
    font-size: 26rpx;
    color: #fff;
    background-color: #da2728;
    border-color: #da2728;
}


.setMeal {
    width: 90%;
}

.setMeal view:nth-child(1) {
    font-size: 26rpx;
}

.setMeal view:nth-child(2) {
    font-size: 22rpx;
    color: #999;
}


.shoppItem {
    width: 100%;
    display: flex;
    padding: 10rpx 0 0 60rpx;
    box-sizing: border-box;
}

.shoppItem .items {
    width: 100%;
    height: 150rpx;
    display: flex;
    padding: 10rpx 0;
    box-sizing: border-box;
}

.shoppItem .photo {
    width: 25%;
}

.shoppItem .photo image {
    width: 80%;
    height: 100%;
    border-radius: 10rpx;
}

.shoContent {
    width: 73%;
    padding: 10rpx;
    box-sizing: border-box;
    height: 100%;
    display: flex;
    flex-flow: column;
    justify-content: space-between;
}

.numberMoney {
    width: 100%;
    height: 40%;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.numberMoney text:nth-child(1) {
    font-size: 28rpx;
    color: #DA0101;
}

.introduce {
    height: 60%;
    font-size: 28rpx;
    display: -webkit-box;
    overflow: hidden;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

/* 结算 */
.closeAccount {
    width: 100%;
    height: 120rpx;
    background-color: #fff;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 100;
    box-shadow: 0px -30rpx 40rpx 0px rgba(33, 27, 27, 0.2);
    display: flex;
    align-items: center;
    padding: 20rpx;
    box-sizing: border-box;
}

.closeDetail {
    width: 60%;
    height: 100%;
    padding: 0 20rpx;
    box-sizing: border-box;
    display: flex;
    flex-flow: column;
    align-items: center;
    justify-content: end;
}

.closeDetail view:nth-child(1) text:nth-child(1) {
    color: #999999;
    font-size: 20rpx;
    margin-right: 15rpx;
}

.closeDetail view:nth-child(1) text:nth-child(2) {
    font-size: 26rpx;
    margin-right: 10rpx;
}

.closeDetail view:nth-child(1) text:nth-child(3) {
    font-size: 26rpx;
}

.closeDetail view:nth-child(2) {
    font-size: 22rpx;
    color: #FF5B45;
    margin-top: 10rpx;
}

.closeButton {
    width: 170rpx;
    height: 80rpx;
    background: linear-gradient(90deg, rgba(255, 140, 101, 1) 0%, rgba(255, 89, 68, 1) 100%);
    border-radius: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
    color: #Ffff;
}

.allChecked {
    width: 30%;
}