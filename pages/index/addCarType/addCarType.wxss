@import "../../../commpents/navbar.wxss";

.search {
    width: 100%;
    height: 120rpx;
    padding: 20rpx;
    box-sizing: border-box;
    background-color: #fff;
    position: relative;
    z-index: 999;
    display: flex;
}

.search .content {
    width: 100%;
    height: 100%;
    position: relative;
}

.search image {
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    top: 37rpx;
    left: 35rpx;
}

.list {
    width: 100%;
    height: 100%;
    position: relative;
    top: 0rpx;
    left: 0;
}

.hotBrand {
    width: 90%;
    padding: 0 20rpx;
    box-sizing: border-box;
}

.header {
    width: 100%;
    height: 50rpx;
    font-size: 30rpx;
    margin-bottom: 20rpx;
}

.hotBrand .content {
    width: 100%;
    box-sizing: border-box;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    font-size: 24rpx;
}

.hotBrand .content .items {
    width: 25%;
    height: 100%;
    display: flex;
    align-items: center;
    flex-flow: column;
    text-align: center;
    justify-content: center;
    font-size: 20rpx;
    margin-bottom: 20rpx;
}

.hotBrand .content .items image {
    width: 70rpx;
    height: 70rpx;
    margin-bottom: 10rpx;
}

.city-scroll {
    left: 0;
    position: fixed;
    height: 100%;
    width: 690rpx;
    padding: 0 40rpx 0 0rpx;
}

.city-scroll1 {
    position: fixed;
    left: 0;
    height: 100%;
    width: 100%;
    padding: 0 0rpx 0 10rpx;
    background-color: #000;
    opacity: .5;
}

.active {
    position: fixed;
    left: 0;
    height: 100%;
    width: 100%;
    padding: 0 0rpx 0 10rpx;
    background-color: #fff;
}


.search-nav {
    position: fixed;
    bottom: 50rpx;
    right: 30rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    padding: 0 20rpx;
}

.search-nav text {
    display: block;
    width: 70rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    font-size: 24rpx;
}


.city {
    font-size: 24rpx;
    padding-bottom: 10rpx;
    border-bottom: 1rpx solid #fff;
    height: 30rpx;
    line-height: 30rpx;

}

.show-city {
    display: flex;
    align-items: center;
    height: 80rpx;
}

.show-city image {
    width: 50rpx;
    height: 50rpx;
    margin-right: 30rpx;
}

.show-city text {
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    font-size: 28rpx;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.city-list .nav-text {
    display: flex;
    align-items: center;
    font-size: 34rpx;
    color: #000;
    background-color: #f6f6f6;
    height: 70rpx;
}

.city-list {
    margin-bottom: 240px;
    padding-left: 20rpx;
    box-sizing: border-box;
}

.proup_content .title {
    width: 100%;
    height: 120rpx;
    display: flex;
    align-items: center;
    padding: 0 20rpx;
    font-size: 34rpx;
    box-sizing: border-box;
}

.proup_content .title image {
    width: 60rpx;
    height: 60rpx;
    margin-right: 20rpx;
}

.proup_content .select {
    width: 100%;
    background-color: #fff;
}


.proup_content .select .select_header {
    width: 100%;
    height: 70rpx;
    background-color: #f6f6f6;
    font-size: 26rpx;
    display: flex;
    align-items: center;
    padding-left: 20rpx;
    box-sizing: border-box;
    font-weight: 700;
}

.proup_content .select .select_con {
    width: 100%;
    background-color: #fff;
    font-size: 24rpx;
    padding-left: 20rpx;
    box-sizing: border-box;
}

.proup_content .select .select_con .items {
    width: 100%;
    height: 70rpx;
    display: flex;
    align-items: center;
}


.picker-view {
    width: 100%;
    display: flex;
    background-color: #fff;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    bottom: 0rpx;
    left: 0rpx;
}

.picker-item {
    line-height: 70rpx;
    margin-left: 5rpx;
    margin-right: 5rpx;
    text-align: center;
}

.pick-view__group {
    width: 100%;
    height: 100%;
}

.search .yCancel {
    width: 100%;
    height: 75%;
    background-color: #f6f6f6;
    padding-left: 70rpx;
    border-radius: 30rpx;
    box-sizing: border-box;
    font-size: 22rpx;
    margin-bottom: 10rpx;
}

.search .NCancel {
    width: 85%;
    height: 75%;
    background-color: #f6f6f6;
    padding-left: 70rpx;
    border-radius: 30rpx;
    box-sizing: border-box;
    font-size: 26rpx;
    margin-bottom: 10rpx;
}

.cancel {
    display: block;
    width: 15%;
    font-size: 26rpx;
    text-align: center;
    line-height: 65rpx;
}

.itemCity {
    width: 100%;
    height: 70rpx;
    padding: 20rpx;
    border-bottom: 1px solid #ccc;
    box-sizing: border-box;
    font-size: 26rpx;
}

.noneCity {
    padding-left: 20rpx;
    padding-top: 20rpx;
    font-size: 24rpx;
}