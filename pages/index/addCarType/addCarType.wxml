<view>
	<!-- 自定义导航栏 start -->
	<view class="nav-bar" style="height:{{navBarHeight}}px;">
		<view class="back" style="height:{{menuHeight}}px; min-height:{{menuHeight}}px; line-height:{{menuHeight}}px;  bottom:{{menuBotton}}px;">
			<view class="backBu">
				<view class="back-content">
					<view style="width:100%;height:100%" bindtap="backfirst">
						<van-icon size="20" name="arrow-left" />
					</view>
				</view>
				<text>请选择品牌</text>
				<view style="width:120rpx"></view>
			</view>
		</view>
	</view>
	<!-- 自定义导航栏 end -->
	<view style="margin-top:{{navBarHeight}}px">
		<view class="search">
			<image src="../../../img/suo.png"></image>
			<input placeholder="请输入汽车品牌关键字" bindinput="getCity" value="{{searchValue}}" bindfocus="searchCity" class="yCancel {{searchShow?'':'Ncancel'}}"></input>
			<text class="cancel" wx:if="{{searchShow}}" bindtap="cancelSearch">取消</text>
		</view>
		<view class="list">
			<scroll-view class="city-scroll" scroll-y="true" scroll-with-animation="true" scroll-into-view="{{toView}}">
				<view class="hotBrand">
					<view class="header">热门品牌</view>
					<view class="content">
						<view class="items" wx:for="{{carHotList}}" wx:key="key" data-img="{{item.car_brand_logo_url}}" data-title="{{item.car_brand_name}}" data-id="{{item.car_brand_id}}" bindtap="selectcity">
							<image src="{{imagePrefix + item.car_brand_logo_url}}"></image>
							<view>{{item.car_brand_name}}</view>
						</view>
					</view>
				</view>
				<view class="carList">
					<view class="content">
						<view class="all-city">
							<view class="city-list">
								<!-- 循环车列表 start -->
								<view wx:for="{{cityList}}" wx:key="key" id="{{'car'+index}}" data-title="{{item.title}}">
									<view class="nav-text">
										<text>{{item.title}}</text>
									</view>
									<view class="show-city" wx:for="{{item.lists}}" wx:key="key" data-id="{{item.car_brand_id}}" data-title="{{item.car_brand_name}}" data-img="{{item.car_brand_logo_url}}" bindtap='selectcity'>
									    <image src="{{item.car_brand_logo_url}}"></image>
										<text >{{item.car_brand_name}}</text>
									</view>
								</view>
								<!-- 循环车列表 end -->
							</view>
						</view>
						<!-- 字母索引 start -->
						<view class="search-nav" style="top:150px">
							<text bindtap="cityScroll" data-index="{{index}}" wx:for="{{searchNav}}" wx:key="key">{{item}}</text>
						</view>
						<!-- 字母索引 end -->
						<!-- 弹出层 -->
						<pop-up visible="{{visible}}" bindtap="closePopUp">
							<view slot="content">
								<view class="picker-view">
									<view class="pick-view__group">
										<view class="proup_content">
											<scroll-view class="city-scroll" scroll-y="true" scroll-with-animation="true">
												<view class="title">
													<image src="{{carImg}}"></image> {{carTiele}}
												</view>
												<view class="select" wx:for="{{carChridren}}" wx:key="key">
													<view class="select_header">{{item.car_brand_name}}</view>
													<view class="select_con" bindtap="goDispla">
														<view class="items" wx:for="{{item.car_series}}" wx:key="key" data-id="{{item.car_series_id}}">{{item.car_series_name}}</view>
													</view>
												</view>
											</scroll-view>
										</view>
									</view>
								</view>
							</view>
						</pop-up>
					</view>
				</view>
			</scroll-view>
		</view>
		<scroll-view class="{{searchValue?'active':'city-scroll1'}}" scroll-y="true" scroll-with-animation="true" scroll-into-view="{{toView}}" wx:if="{{searchShow}}" bindtap="SearchNone">
			<view class="{{searchValue?'itemCity':''}}" wx:for="{{searchCityList}}" wx:key="key" data-id="{{item.car_series_id}}" data-title="{{item.car_series_name}}" catchtap="goIndex">{{item.car_series_name}}</view>
			<view wx:if="{{!searchCityList}}" class="noneCity">没有找到带{{searchValue}}的车辆!</view>
		</scroll-view>
	</view>
</view>