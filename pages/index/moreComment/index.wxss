@import "../../../commpents/navbar.wxss";

.all {
    width: 100%;
    height: 70rpx;
    padding: 20rpx 0 20rpx 10rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    font-size: 28rpx;
}

.all image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 20rpx;
}

.all text:nth-child(3) {
    color: #D32C30;
    margin-left: 15rpx;
}

/* 评论 */
.commentList {
    width: 100%;
    padding: 20rpx 20rpx 10rpx 20rpx;
    box-sizing: border-box;
}

.commentList .item {
    width: 100%;
    border-bottom: 1px dashed #ccc;
}

.commentList .item .essential {
    width: 100%;
    height: 100rpx;
    display: flex;
    align-items: center;
}

.commentList .item .essential .item_img image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}

.commentList .item .essential .item_name .date {
    display: flex;
    align-items: center;
    font-size: 26rpx;
    justify-content: space-between;
}

.commentList .item .essential .item_name .rate {
    display: flex;
    align-items: center;
}

.commentList .item .essential .item_name .rate image {
    width: 20rpx;
    height: 20rpx;
}

.commentList .item .essential .item_name .rate text {
    margin-left: 20rpx;
    font-size: 24rpx;
}

.commentList .item .commentContent {
    width: 88%;
    margin-left: 85rpx;
    padding: 10rpx;
    box-sizing: border-box;
}

.commentList .item .commentContent .commentContent_Typeface {
    width: 100%;
    display: -webkit-box;
    overflow: hidden;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    font-size: 28rpx;
}

.commentList .item .commentContent .commentContent_img {
    width: 100%;
    height: 170rpx;
    border-radius: 15rpx;
    padding: 10rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
}

.commentList .item .commentContent .commentContent_img image {
    width: 31%;
    height: 100%;
    margin-right: 25rpx;
    border-radius: 20rpx;
}

.commentList .item .commentContent .commentContent_img video {
    width: 31%;
    height: 100%;
    margin-right: 25rpx;
    border-radius: 20rpx;
}

.commentList .item .commentContent .shoppNumber {
    width: 100%;
    padding: 15rpx 0;
    box-sizing: border-box;
}