/* pages/my/information/information.wxss */@import "../../../commpents/navbar.wxss";

.items {
  width: 100%;
  height: 120rpx;
  padding: 20rpx 20rpx 0 20rpx;
  box-sizing: border-box;
  border-bottom: 1px solid rgba(238, 238, 238, 1);
  display: flex;
  align-items: center;
}

.item-L {
  width: 30%;
  height: 100%;
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

radio {
  margin-left: 1em;
}

radio .wx-radio-input {
  width: 28rpx;
  height: 28rpx;
  border: 2rpx solid #ddd;
  border-radius: 100%;
  background: #fff !important;
}

radio .wx-radio-input.wx-radio-input-checked {
  border: 2rpx solid #ddd !important;
}

radio .wx-radio-input.wx-radio-input-checked::before {
  width: 60%;
  height: 60%;
  background: #EA3B34;
  border-radius: 100%;
  content: '';
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}


.item-R {
  width: 70%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  color: #666666;
}

.item-R image {
  width: 90rpx;
  height: 90rpx;
  margin-right: 30rpx;
  border-radius: 50%;
}

.item-R text {
  font-size: 28rpx;
  margin-right: 30rpx;
}

.item-R radio .wx-radio-input {
  height: 20rpx;
  width: 20rpx;
  border-radius: 50%;
  background: transparent;
}

.item-R view {
  margin-left: 40rpx;
}

radio-group {
  display: flex;
}

.yes {
  width: 100%;
  height: 80rpx;
  position: fixed;
  left: 0;
  bottom: 150rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.yes text {
  display: inline-block;
  padding: 30rpx 220rpx;
  background: linear-gradient(90deg, rgba(255, 140, 101, 1) 0%, rgba(255, 89, 68, 1) 100%);
  border-radius: 45rpx;
  color: #fff;
}