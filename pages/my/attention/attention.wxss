@import "../../../commpents/navbar.wxss";


.content {
    width: 100%;
    height: 900rpx;
    padding: 20rpx;
    box-sizing: border-box;
}

.items {
    width: 100%;
    height: 230rpx;
    background-color: #fff;
    display: flex;
    justify-content: space-between;
}

.items .item_img {
    width: 30%;
    height: 100%;
    padding: 20rpx 0;
    box-sizing: border-box;
    position: relative;
}

.items .item_img image {
    width: 95%;
    height: 100%;
    border-radius: 20rpx;
}

.items .item_con {
    width: 65%;
    height: 100%;
    padding: 20rpx 10rpx 0 0;
    box-sizing: border-box;
}

.items .item_con view {
    margin-bottom: 20rpx;
}

.title {
    width: 100%;
    font-size: 28rpx;
    display: flex;
    justify-content: space-between;
}

.shoppName {
    width: 80%;
    display: inline-block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.money {
    width: 100%;
    display: flex;
    justify-content: space-between;
    padding-right: 20rpx;
    box-sizing: border-box;
    align-items: center;
}

.money .img {
    width: 45rpx;
    height: 45rpx;
    background-color: rgba(255, 245, 243, 1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.money image {
    width: 27rpx;
    height: 27rpx;
}

.star {
    width: 100%;
    display: flex;
    padding-right: 20rpx;
    align-items: center;
    justify-content: space-between;
    font-size: 24rpx;
}

.star image {
    width: 20rpx;
    height: 20rpx;
    margin-left: 10rpx;
}

.unfollow {
    width: 20%;
    display: inline-block;
    font-size: 18rpx;
    color: #000 !important;
    margin-left: 30rpx;
    height: 30rpx;
    border: 1px solid #ccc;
    padding: 0 10rpx;
    line-height: 30rpx;
    border-radius: 20rpx;
    text-align: center;
}

.soldOut {
    width: 95%;
    height: 85%;
    background-color: #ccc;
    opacity: .5;
    position: absolute;
    top: 20rpx;
    left: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 20rpx;

}

.soldOut text {
    display: block;
    width: 45%;
    height: 90rpx;
    background-color: #000;
    font-size: 22rpx;
    color: #fff;
    border-radius: 50%;
    text-align: center;
    line-height: 90rpx;
}

.nullColl {
    width: 100%;
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24rpx;
    color: #999;

}