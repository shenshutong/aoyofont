@import "../../../commpents/navbar.wxss";
page {
    background-color: #fff;
}

.content_list .defalut,.content_list .items {
    width: 100%;
    height: 150rpx;
    padding: 20rpx;
    box-sizing: border-box;
    border-bottom: 1px solid rgba(238, 238, 238, 1);
    display: flex;
    justify-content: space-between;
}

.content_list .defalut .defalut-L,
.content_list .defalut .defalut-R ,
.content_list .items .defalut-R{
    width: 10%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.content_list .defalut .defalut-L image,
.content_list .defalut .defalut-R image,
.content_list .items .defalut-R image  {
    width: 40rpx;
    height: 40rpx;
}

.content_list .defalut .defalut-M {
    width: 78%;
    height: 100%;
}
.content_list .items .defalut-M {
    width: 88%;
    height: 100%;
    padding-left: 20rpx;
}

.content_list .defalut .defalut-M view,.content_list .items .defalut-M view {
    width: 100%;
    height: 50%;
    display: flex;
    align-items: center;
}

.content_list .defalut .defalut-M .m-T text:nth-child(1),
.content_list .items .defalut-M .m-T text:nth-child(1) {
    font-size: 26rpx;
}

.content_list .defalut .defalut-M .m-T text:nth-child(2),
.content_list .items .defalut-M .m-T text:nth-child(2) {
    font-size: 26rpx;
    margin: 0 20rpx;
}

.content_list .defalut .defalut-M .m-T text:nth-child(3) {
    display: inline-block;
    padding: 5rpx 10rpx;
    background: rgba(191, 191, 191, 1);
    border-radius: 10rpx;
    font-size: 20rpx;
    color: #fff;
    /* margin: 0 20rpx; */
}
.content_list .defalut .defalut-M .m-T text:nth-child(4),
.content_list .items .defalut-M .m-T text:nth-child(3) {
    display: inline-block;
    padding: 5rpx 20rpx;
    background:linear-gradient(90deg,rgba(255,136,99,1) 0%,rgba(255,89,68,1) 100%);
    border-radius: 10rpx;
    font-size: 20rpx;
    color: #fff;
    margin: 0 20rpx;
}

.content_list .defalut .defalut-M .m-B,.content_list .items .defalut-M .m-B{
    font-size: 24rpx;
    color: #333333;
}
.add{
    width: 100%;
    height: 150rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #fff;
    position: fixed;
    left: 0;
    bottom: 0rpx;
    z-index: 999;
}
.add image{
    width: 60%;
    height: 60%;
}